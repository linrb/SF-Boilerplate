@using SF.Web.Navigation
@model NavigationViewModel
@functions {
}
@if (Model.HasVisibleChildren(Model.RootNode))
{
    <ul class="nav navbar-nav" role="menubar">
        <li role="presentation" class='@Model.GetClass(Model.RootNode.Value)'><a aria-selected="@Model.IsCurrentNode(Model.RootNode.Value)" href="@Url.Content(Model.AdjustUrl(Model.RootNode))">@Html.Raw(Model.GetIcon(Model.RootNode.Value))@Model.AdjustText(Model.RootNode)</a></li>
        @foreach (var node in Model.RootNode.Children)
        {
            if (!Model.ShouldAllowView(node)) { continue; }
            <li role="presentation" class='@Model.GetClass(node.Value)'><a aria-selected="@Model.IsCurrentNode(node.Value)" role="menuitem" href="@Url.Content(Model.AdjustUrl(node))">@Html.Raw(Model.GetIcon(node.Value))@Model.AdjustText(node)</a></li>
        }
    </ul>
}

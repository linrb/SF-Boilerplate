<script>
    var contentPath = '@Url.Content("~")'.substr(0, '@Url.Content("~")'.length - 1);
    var returnUrl = '@ViewData["ReturnUrl"]';
    //回车键
    document.onkeydown = function (e) {
        if (!e) e = window.event;
        if ((e.keyCode || e.which) == 13) {
            var btlogin = document.getElementById("btnlogin");
            btnlogin.click();
        }
    }
    // add quick fade-in effect to the page
    $(document).ready(function () {
        $("body").attr("id", "splash");
        $("#content").sfFadeIn();
        //密码输入事件
        $("#Password").keyup(function () {
            $(".passlevel").find('em').removeClass('bar');
            var length = $(this).val().length;
            if (length <= 8) {
                $(".passlevel").find('em:eq(0)').addClass('bar');
            } else if (length > 8 && length <= 12) {
                $(".passlevel").find('em:eq(0)').addClass('bar');
                $(".passlevel").find('em:eq(1)').addClass('bar');
            } else if (length > 12) {
                $(".passlevel").find('em').addClass('bar');
            }
        })
        //注册按钮事件
        $("#btnSend").click(function () {
            var $email = $("#Email");
            var $name = $("#FullName");
            var $password = $("#Password");
            var $confirmpassword = $("#ConfirmPassword");
            if ($email.val() == "") {
                $email.focus();
                formMessage('请输入邮箱。');
                return false;
            } else if ($name.val() == "") {
                $name.focus();
                formMessage('请输入姓名。');
                return false;
            } else if ($password.val() == "") {
                $password.focus();
                formMessage('请输入密码。');
                return false;
            } else if ($password.val() != $confirmpassword.val()) {
                $confirmpassword.focus();
                formMessage('两次输入密码不正确。');
                return false;
            } else {
                $("#btnSend").addClass('active').attr('disabled', 'disabled');
                $("#btnSend").find('span').hide();
                var postData = { Email: $email.val(), FullName: $name.val(), Password: $password.val(), ConfirmPassword: $confirmpassword.val(), verifycode: '' };
                if ($('[name=__RequestVerificationToken]').length > 0) {
                    postData["__RequestVerificationToken"] = $('[name=__RequestVerificationToken]').val();
                }
                $.ajax({
                    url: contentPath + "/Register",
                    data: postData,
                    type: "post",
                    dataType: "json",
                    success: function (data) {
                        if (data.state == "success") {
                            SF.dialogs.alert('注册成功');
                            window.location.href = contentPath + '/Login/Index';
                        } else {
                            formMessage(data.message);
                            $("#btnSend").removeClass('active').removeAttr('disabled');
                            $("#btnSend").find('span').show();

                        }
                    }
                });
            }
        })

    });
    //提示信息
    function formMessage(msg, type) {
        $('.login_tips').html("");
        $('.login_tips').prepend(msg);
        $('.login_tips').addClass("alert-danger");
        if (type == "success") {
            $('.login_tips').removeClass("alert-success");
        }
        $('.login_tips').show();
    }
</script>


